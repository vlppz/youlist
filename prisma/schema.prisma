generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  username  String   @unique
  pass_hash String
}

model UserLogin {
  id      Int       @id @default(autoincrement())
  user_id Int
  ip      String
  token   String    @unique @default(uuid())
}
